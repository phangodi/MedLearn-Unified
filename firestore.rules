rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* EMULATOR MODE: Uncomment this for local testing with Firebase emulators
    // Allow all reads and writes for testing
    match /{document=**} {
      allow read, write: if true;
    }
    */

    // PRODUCTION RULES - Active for deployment

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isSuperAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    function isNotBanned() {
      return isSignedIn() &&
             (!exists(/databases/$(database)/documents/users/$(request.auth.uid)) ||
              !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.keys().hasAny(['isBanned']) ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBanned != true);
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() &&
                      isOwner(userId) &&
                      !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin']);
      allow delete: if isAdmin();
    }

    // Posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned();
      // Allow updates for:
      // - Any signed-in user (for likes, views, bookmarks)
      // - Post author (for content edits, using actualAuthorId for anonymous posts)
      // - Admins (for pinning, moderation)
      allow update: if isSignedIn();
      allow delete: if isAdmin();
    }

    // Comments collection
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn() && isNotBanned();
      allow update, delete: if isSignedIn() &&
                              (resource.data.author.id == request.auth.uid || isAdmin());
    }

    // Announcements collection (notification system)
    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    // Dashboard message document (notification system)
    match /dashboardMessage/current {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    // Settings collection (community tags, etc.)
    match /settings/{document} {
      allow read: if true; // Anyone can read settings (including tags)
      allow write: if isSuperAdmin(); // Only super admins can modify settings
    }

    // =========================================================================
    // MTO QUESTIONS SYSTEM COLLECTIONS
    // =========================================================================

    // MTO Questions collection
    // All authenticated users can read (for practice tests)
    // Only super admins can write (via admin panel or migration scripts)
    match /mtoQuestions/{questionId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    // Question Explanations collection
    // All authenticated users can read (shown after answering)
    // Only super admins can write (generated by AI or manual entry)
    match /questionExplanations/{explanationId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSuperAdmin();
    }

    // Question Flags collection
    // All authenticated users can read and flag questions
    // Flag count increment logic handled client-side (could add validation)
    match /questionFlags/{flagId} {
      allow read: if isSignedIn();
      // Allow create if user is authenticated (first flag)
      allow create: if isSignedIn();
      // Allow update to increment flag count or resolve (admin only for resolve)
      allow update: if isSignedIn() && (
        // User flagging: can only increment flagCount and add their ID
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['resolved', 'resolvedAt', 'resolvedBy'])) ||
        // Admin resolving: can modify anything
        isSuperAdmin()
      );
      allow delete: if isSuperAdmin();
    }

    // MTO Audit Log collection
    // Only super admins can read and write (admin panel only)
    match /mtoAuditLog/{logId} {
      allow read: if isSuperAdmin();
      allow create: if isSuperAdmin();
      allow update, delete: if false; // Audit logs should never be modified
    }

    // System Stats collection
    // All authenticated users can read (for dashboard stats)
    // Only super admins can write (updated by scripts)
    match /systemStats/{docId} {
      allow read: if isSignedIn();
      allow write: if isSuperAdmin();
    }

    // User Bookmarks collection
    // Users can only read/write their own bookmarks
    // Document ID = userId
    match /userBookmarks/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // ========================================
    // FLASHCARDS COLLECTIONS
    // ========================================

    // Flashcard Decks
    match /flashcards/decks/items/{deckId} {
      // Anyone signed in can read preloaded decks
      // Users can only read their own decks
      allow read: if isSignedIn() && (
        resource.data.isPreloaded == true ||
        resource.data.userId == request.auth.uid
      );

      // Users can create decks for themselves
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update/delete their own decks
      allow update, delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // Flashcard Cards
    match /flashcards/cards/items/{cardId} {
      // Users can read cards from their decks or preloaded decks
      allow read: if isSignedIn();

      // Users can create cards with their userId
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update/delete their own cards
      allow update, delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // Flashcard Reviews (user's review history)
    match /flashcards/reviews/items/{reviewId} {
      // Users can only access their own reviews
      allow read, write: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
    }

    // Flashcard Sessions (study sessions)
    match /flashcards/sessions/items/{sessionId} {
      // Users can only access their own sessions
      allow read: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

  }
}
